<%- include('../partials/header') -%>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">YelpCamp</p>
      <div class="list-group">
        <li class="list-group-item active">item-1</li>
      </div>
        <div class="list-group">
          <li class="list-group-item">item-2</li>
        </div>
        <div class="list-group">
          <li class="list-group-item">item-3</li>
        </div>
    </div>
<div class="col-md-9">
  <div class="card" style="padding:0px; width:100%;">
    <img  class="img-fluid" src="<%=campground.image %>" >
<div class="caption-full" style="padding:9px;">


     <h5 style="display:inline;"><a href=""> <%=campground.name %> </a></h5>

<h6  class="float-right" style="display:inline; "> $<%= campground.price %>/night </h6>


<p><%=campground.description %></p>
<p><em>Submitted By  <%=campground.author.username %></em></p>





<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>

<a class="btn   btn-warning" href="/campgrounds/<%= campground._id %>/edit" > Edit</a>

<form  style="display:inline"class="" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="post">
  <button class="btn btn-danger" name="button">Delete</button>
</form>
<%}%>
</div>
  </div>
<div class="card bg-light" style="padding:15px">
  <div class="text-right">

    <a  class="btn btn-success" href="/campgrounds/<%=campground._id%>/comments/new">Add New Comment</a>
  </div>
  <hr>
  <% campground.comments.forEach(function(comment){%>
<div class="row" style="padding:10px 0px 20px; ">
  <div class="col-md-12">
      <strong><%=comment.author.username%></strong>
      <span class="float-right">10 days ago</span>
      <p>
       - <%=comment.text%>
      </p>

      <% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
      <a href="/campgrounds/<%= campground._id %>/comments/<%=comment._id %>/edit" class="btn btn-sm btn-warning">
        Edit</a>

<form style="display:inline;" action="/campgrounds/<%= campground._id %>/comments/<%=comment._id %>?_method=DELETE"  method="post">


<input type="submit"  class="btn btn-sm btn-danger" name="" value="Delete">
</form>
<% } %>



  </div>

</div>

  <%})%>
</div>
</div>
  </div>
</div>




<%- include('../partials/footer') -%>
