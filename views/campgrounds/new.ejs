<%-include("../partials/header")-%>
<div class="container">

    <h1 style="margin-top:50px; text-align:center;">Create new campground</h1>
    <div style="  margin:25px auto 25px; width:30%;">
      <form class="" action="/campgrounds" method="post">
<div class="form-group">
        <input class="form-control" type="text" name="name" value="" placeholder="name">
</div>
<div class="form-group">
        <input class="form-control" type="number" name="price" min="0.00" step="0.25" placeholder="price">
</div>
<div class="form-group">
    <input class="form-control" type="text" name="image" value="" placeholder="image url">
</div>
<div class="form-group">
    <input class="form-control" type="text" name="description" value="" placeholder="image description">
</div>
<div class="form-group">
  <button type="submit" class="btn btn-block btn-lg btn-primary ">Submit!</button>
</div>

      </form>
      <a style="text-align:center margin:25px auto; width:30%" href="/index">Go Back</a>
    </div>


</div>

<%-include("../partials/footer") -%>
